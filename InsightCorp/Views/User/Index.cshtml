@model IEnumerable<InsightCorp.Models.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

<h2>Company Employee List</h2>
<p>*Manager names are in bold*</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Middle Initial</th>
            <th>Last Name</th>
            <th>Department</th>
            <th>Job Title</th>
            <th>Email</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Id</td>
            @if (user.Role == "Manager")
            {
                <td><span style="font-weight:bold">@user.FirstName</span></td>
                <td><span style="font-weight:bold">@user.MiddleInitial</span></td>
                <td><span style="font-weight:bold">@user.LastName</span></td>
            }
            else
            {
                <td>@user.FirstName</td>
                <td>@user.MiddleInitial</td>
                <td>@user.LastName</td>
            }
            <td>@user.DepartmentName</td>
            <td>@user.JobTitle</td>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
        </tr>
        }
    </tbody>
</table>

